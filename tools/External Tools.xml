<toolSet name="External Tools">
  <tool name="Open in Emacs" description="Load current file in Emacs" showInMainMenu="true" showInEditor="true" showInProject="true" showInSearchPopup="true" disabled="false" useConsole="true" showConsoleOnStdOut="true" showConsoleOnStdErr="true" synchronizeAfterRun="true">
    <exec>
      <option name="COMMAND" value="/usr/bin/idea-emacs-bridge" />
      <option name="PARAMETERS" value="$FilePath$ $LineNumber$ $ColumnNumber$" />
      <option name="WORKING_DIRECTORY" value="$FileDir$" />
    </exec>
  </tool>
</toolSet>